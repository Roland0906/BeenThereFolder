<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Background color, same as text color -->
            <stroke
                android:width="1dp"
            android:color="@color/white" /> <!-- Border color, same as text color -->
        </shape>
    </item>
    <!-- Text content -->
    <item android:right="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
