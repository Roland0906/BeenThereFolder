<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="300dp"
                android:topRightRadius="300dp"
                android:bottomLeftRadius="300dp"
                android:bottomRightRadius="300dp" />
            <!-- Background color -->
            <solid android:color="#051e3e" />
        </shape>
    </item>
    <!-- Black border -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="300dp"
                android:topRightRadius="300dp"
                android:bottomLeftRadius="300dp"
                android:bottomRightRadius="300dp" />
            <!-- Border color -->
            <stroke
                android:width="4dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
