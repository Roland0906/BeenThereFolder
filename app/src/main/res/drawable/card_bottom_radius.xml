<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your desired background color -->
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#091039" /> <!-- Set your desired bottom corner color -->
            <corners android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp" />
        </shape>
    </item>
</layer-list>