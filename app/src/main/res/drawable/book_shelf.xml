<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with Wood-like Border -->
    <item>
        <shape android:shape="rectangle">
            <!-- Outer Border -->
            <solid android:color="#F6E7C2" />
            <stroke
                android:width="0dp"
                android:color="#835121" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Content with Gradient -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0F1B23"
                android:endColor="#374751"
                android:type="linear"
                android:angle="135" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
