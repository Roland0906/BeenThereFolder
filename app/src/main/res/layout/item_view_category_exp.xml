<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="exp"
            type="com.example.beenthere.data.Experience" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/image_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:imageUrl="@{exp.image}"
            tools:src="@drawable/logo_blue_with_padding"
            />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/book_image"
            app:layout_constraintTop_toTopOf="@id/book_image"
            tools:text="Gonzalez"
            />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/user_id"
            app:layout_constraintStart_toStartOf="@id/user_id"
            app:layout_constraintBottom_toBottomOf="@id/book_image"
            tools:text="12 rules of life"
            />

        <TextView
            android:id="@+id/narration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="5"
            app:layout_constraintStart_toEndOf="@id/book_title"
            app:layout_constraintTop_toTopOf="@id/book_image"
            app:layout_constraintBottom_toBottomOf="@id/book_image"
            tools:text="Daisy runs away..."
            />





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>