<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.beenthere.home.HomeViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".home.HomeFragment"
        >

        <TextView
            android:id="@+id/text_input_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/enter_book_name"
            />

        <EditText
            android:id="@+id/edit_input_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:hint="@string/books_search_hint"
            />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/search_book"
            />
        
        <TextView
            android:id="@+id/book_title_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.bookTitle}"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/author_name_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.bookAuthor}"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            tools:text="Author"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />

        <ImageView
            android:id="@+id/book_image_result"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:scaleType="center"
            android:cropToPadding="true"
            android:layout_marginStart="16dp"
            app:imageUrl="@{viewModel.bookImage}"


            />

<!--        app:imageUrl="@{viewModel.bookImage}"-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/book_search_result_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />



    </LinearLayout>
</layout>