<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".notalone.NotAloneFragment">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/main_theme_color"
            android:gravity="center"
            android:text="@string/someone_might_have_been_there"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_frame"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/header_title">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_an_environment"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/environ_white"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:background="@drawable/environ_white"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/environ_gray"
            />

        <ImageView
            android:id="@+id/environ_gray"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/envrion_gray"
            app:layout_constraintTop_toTopOf="@id/environ_white"
            app:layout_constraintStart_toEndOf="@id/environ_white"
            app:layout_constraintEnd_toStartOf="@id/environ_dark"
            />

        <ImageView
            android:id="@+id/environ_dark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/envrion_dark"
            app:layout_constraintTop_toTopOf="@id/environ_white"
            app:layout_constraintStart_toEndOf="@id/environ_gray"
            app:layout_constraintEnd_toEndOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:text="@string/tell_us_your_situation"
            app:layout_constraintTop_toBottomOf="@id/top_frame"
            android:gravity="center"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_frame"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_description"

            >

            <EditText
                android:id="@+id/input_situation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_border"
                android:gravity="top"
                android:textColorHint="#949494"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            app:layout_constraintTop_toBottomOf="@id/input_frame"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/text_not_alone_1"
            android:paddingHorizontal="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>