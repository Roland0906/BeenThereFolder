        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_frame"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/pick_an_environment"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/environ_white"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/environ_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/environ_gray"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <ImageView
                android:id="@+id/environ_gray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/envrion_gray"
                app:layout_constraintEnd_toStartOf="@id/environ_dark"
                app:layout_constraintStart_toEndOf="@id/environ_white"
                app:layout_constraintTop_toTopOf="@id/environ_white" />

            <ImageView
                android:id="@+id/environ_dark"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/envrion_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/environ_gray"
                app:layout_constraintTop_toTopOf="@id/environ_white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/tell_us_your_situation"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/top_frame" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_frame"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_description"

            >

            <EditText
                android:id="@+id/input_situation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_border"
                android:gravity="top"
                android:textColorHint="#949494" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:paddingHorizontal="8dp"
            android:text="Send"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_frame" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>